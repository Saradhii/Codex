{
  "name": "codex-proxy",
  "version": "1.0.0",
  "description": "Format conversion proxy enabling Claude Code CLI to work with Chutes GLM models including full tool calling support",
  "type": "module",
  "main": "src/anthropic-proxy.js",
  "bin": {
    "codex-proxy": "./src/anthropic-proxy.js"
  },
  "scripts": {
    "start": "node src/proxy.js",
    "dev": "node src/proxy.js",
    "proxy": "node src/anthropic-proxy.js",
    "proxy:debug": "DEBUG=true node src/anthropic-proxy.js",
    "test:tools": "node test-tool-calling.js"
  },
  "files": [
    "src/",
    "README.md",
    ".env.example"
  ],
  "keywords": [
    "claude-code",
    "chutes",
    "proxy",
    "glm",
    "anthropic",
    "openai",
    "format-conversion",
    "tool-calling",
    "streaming",
    "ai",
    "llm",
    "cli"
  ],
  "author": "Saradhi",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Saradhii/Codex.git"
  },
  "preferGlobal": true,
  "dependencies": {
    "express": "^4.19.2",
    "node-fetch": "^3.3.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}